<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioButton
        android:id="@+id/rdbtn_methodpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorPrimary"
        android:backgroundTint="#F2F2F2"
        android:checked="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></RadioButton>

    <TextView
        android:id="@+id/tv_name_methodpay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Trương Hữu Thắng - 0384180187"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/rdbtn_methodpay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rdbtn_methodpay"
        app:layout_constraintTop_toTopOf="@+id/rdbtn_methodpay"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>