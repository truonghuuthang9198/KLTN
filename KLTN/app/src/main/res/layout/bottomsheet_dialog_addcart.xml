<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="35dp"
    android:paddingTop="18dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/check_addcart"
        app:layout_constraintStart_toStartOf="@+id/btn_tieptuc_muahang"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="Sản phẩm đã được thêm vào giỏ hàng"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8"></TextView>

    <Button
        android:id="@+id/btn_tieptuc_muahang"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="#F2F2F2"
        android:text="Tiếp tục mua hàng"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"></Button>

    <Button
        android:id="@+id/btn_xemgiohang"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="12dp"
        android:background="#FF8000"
        android:text="Xem giỏ hàng &amp; thanh toán"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btn_tieptuc_muahang"
        app:layout_constraintStart_toStartOf="@+id/btn_tieptuc_muahang"
        app:layout_constraintTop_toBottomOf="@+id/btn_tieptuc_muahang"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>