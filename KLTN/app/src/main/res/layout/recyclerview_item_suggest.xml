<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_recyclerview_item_suggest"
    android:padding="10dp">

    <ImageView
        android:id="@+id/img_book_suggest"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:src="@drawable/vd3_sach"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/title_book_suggest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Mary Had A Little Lamb Fin Pup"
        android:maxLines="2"
        android:singleLine="true"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/img_book_suggest"
        app:layout_constraintStart_toStartOf="@+id/img_book_suggest"
        app:layout_constraintTop_toBottomOf="@+id/img_book_suggest"></TextView>

    <TextView
        android:id="@+id/priceReduced_book_suggest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="25.000 đ"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/star_book_suggest"
        app:layout_constraintStart_toStartOf="@+id/title_book_suggest"
        app:layout_constraintTop_toBottomOf="@+id/title_book_suggest"></TextView>

    <TextView
        android:id="@+id/price_book_suggest"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="12.000 đ"
        app:layout_constraintEnd_toEndOf="@+id/title_book_suggest"
        app:layout_constraintStart_toStartOf="@+id/title_book_suggest"
        app:layout_constraintTop_toBottomOf="@+id/priceReduced_book_suggest"></TextView>

    <Button
        android:id="@+id/btn_muangay"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:text="Mua ngay"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_book_suggest" />

    <RatingBar
        android:id="@+id/star_book_suggest"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:isIndicator="true"
        android:numStars="5"
        android:progressBackgroundTint="#000000"
        android:progressTint="@color/colorPrimary"
        android:rating="3.5"
        android:scaleX="1"
        android:scaleY="1"
        android:stepSize="0.5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/priceReduced_book_suggest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/priceReduced_book_suggest" />
</androidx.constraintlayout.widget.ConstraintLayout>