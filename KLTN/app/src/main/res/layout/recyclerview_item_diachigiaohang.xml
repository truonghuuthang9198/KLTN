<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioButton
        android:id="@+id/rdbtn_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tv_diachi_diachigiaohang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name_sdt_diachigiaohang"></RadioButton>

    <TextView
        android:id="@+id/tv_name_sdt_diachigiaohang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Trương Hữu Thắng - 0384180187"
        android:textColor="#000000"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/rdbtn_offer"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/tv_diachi_diachigiaohang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="76/32/13 Lê Trọng Tấn, Phường Tây Thạnh, Quận Tân Phú, Hồ Chí Minh, VN"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_sdt_diachigiaohang"
        app:layout_constraintStart_toStartOf="@+id/tv_name_sdt_diachigiaohang"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_sdt_diachigiaohang"></TextView>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_diachi_diachigiaohang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name_sdt_diachigiaohang"></ImageView>
</androidx.constraintlayout.widget.ConstraintLayout>